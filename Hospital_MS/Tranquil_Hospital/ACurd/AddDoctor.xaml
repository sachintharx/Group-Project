<Window x:Class="Hos_01.ACurd.AddDoctor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hos_01.ACurd"
        mc:Ignorable="d"
        Title="AddDoctor" Height="450" Width="500">
   
    <Grid>
        
        
        <StackPanel >
            <TextBlock Text=" Add Doctor" HorizontalAlignment="Center" Margin="10" FontSize="20" FontWeight="DemiBold" Foreground="PaleVioletRed"/>
                        
            <TextBlock Text="Doctor Name" Style="{StaticResource formtext}" Margin="10"/>
            <TextBox Text="{Binding UserName}" BorderThickness=" 0 0 0 1" Style="{StaticResource forminput}"/>
            <TextBlock Text="Specific field" Style="{StaticResource formtext}" Margin="10"/>
            <TextBox  Text="{Binding SpecificField}" BorderThickness=" 0 0 0 1" Style="{StaticResource forminput}"/>
            <TextBlock Text="Specific field"  Style="{StaticResource formtext}" Margin="10"/>
            <TextBox  Text="{Binding DoctorCharge}" BorderThickness=" 0 0 0 1" Style="{StaticResource forminput}"/>



            <Button Content="Save" Margin="100" Width="100"  Command="{Binding AddDoctorCommand  }" Style="{StaticResource curdbutton}"  />
        </StackPanel>
    </Grid>
</Window>
